{
    "name": "__MSG_wanikaninotify_name__",
    "version": "0.4.9",
    "manifest_version": 2,
    "description": "__MSG_wanikaninotify_description__",
    "default_locale": "en",
    "icons": {"128": "icon_128.png"},
    "background" : {
        "scripts": ["background.js"]
        },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "content_scripts": [
    {
        "matches": [
            "*://www.wanikani.com/review/session",
            "*://www.wanikani.com/lesson/session"
        ],
        "js": ["content.js"]
    }
    ],
    "permissions": [
        "alarms",
        "notifications",
        "storage",
        "https://www.wanikani.com/api/*"
    ],
    "browser_action": {
        "default_title": "WaniKani Notifier",
        "default_icon": "icon_128.png",
        "browser_style": false
    },
    "web_accessible_resources": ["icon_128.png"],
    "applications": {
        "gecko": {
            "id": "@wanikani-notifier",
            "strict_min_version": "45.0"
        }
    }
}
