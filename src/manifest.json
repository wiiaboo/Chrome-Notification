{
    "name": "__MSG_wanikaninotify_name__",
    "version": "0.4.93",
    "manifest_version": 2,
    "description": "__MSG_wanikaninotify_description__",
    "default_locale": "en",
    "icons": {
        "16": "icons/icon_16.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    },
    "background" : {
        "scripts": ["background.js"]
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "content_scripts": [{
        "matches": [
            "*://www.wanikani.com/review/session",
            "*://www.wanikani.com/lesson/session"
        ],
        "js": ["content.js"]
    }],
    "permissions": [
        "alarms",
        "storage",
        "tabs",
        "contextMenus",
        "https://api.wanikani.com/v2/*"
    ],
    "browser_action": {
        "default_title": "WaniKani Notifier",
        "default_icon": "icons/icon_48.png",
        "browser_style": false
    },
    "web_accessible_resources": ["icons/icon_128.png"],
    "browser_specific_settings": {
        "gecko": {
            "id": "@wanikani-notifier",
            "strict_min_version": "57.0"
        }
    }
}
